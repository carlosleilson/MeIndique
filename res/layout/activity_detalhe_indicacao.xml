<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.meindique.IndicacaoActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <Button
                android:id="@+id/btTeIndiarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/abc_action_bar_subtitle_bottom_margin"
                android:text="Indicar" 
                android:onClick="indicar"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEstado_Cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado / Cidadeee" />

        <TextView
            android:id="@+id/tvEstadoCidadeDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assunto" />

        <TextView
            android:id="@+id/tvAssuntoDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem" />

        <TextView
            android:id="@+id/tvMensagemDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RatingBar
            android:id="@+id/rbIndicarDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
    